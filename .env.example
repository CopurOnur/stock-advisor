# Stock Advisor Environment Variables
# Copy this file to .env and fill in your API keys

# News API Key (Optional)
# Get your free API key from https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Alpha Vantage API Key (Optional)
# Get your free API key from https://www.alphavantage.co/
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# IEX Cloud API Key (Optional)
# Get your API key from https://iexcloud.io/
IEX_API_KEY=your_iex_api_key_here

# OpenAI API Key (Optional - for advanced sentiment analysis)
# Get your API key from https://openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (Optional)
DATABASE_URL=sqlite:///stock_advisor.db

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/stock_advisor.log

# UI Configuration
UI_PORT=8501
UI_THEME=light

# Model Configuration
MODEL_DIR=models
AUTO_TRAIN=true
CACHE_TTL=3600